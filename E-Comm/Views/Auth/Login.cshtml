@{
    ViewData["Title"] = "Login - 3B1G";
}

<!-- Hero Section -->
<div class="login-hero-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <h1 class="hero-title">Welcome Back</h1>
                <p class="hero-subtitle">Sign in to access your 3B1G account</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <!-- Main Login Card -->
            <div class="login-card">
                <div class="card-body">
                    <div class="login-header">
                        <div class="login-icon">
                            <i class="fas fa-crown"></i>
                        </div>
                        <h3 class="login-title brand-font">3B1G</h3>
                        <p class="login-subtitle">Please sign in to your account</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                        </div>
                    }

                    <form asp-controller="Auth" asp-action="Login" method="post" class="login-form">
                        <div class="form-group">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   placeholder="Enter your email address" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input type="password" class="form-control" id="password" name="password" 
                                   placeholder="Enter your password" required>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </button>
                        </div>
                    </form>

                    <div class="login-footer">
                        <p class="signup-link">
                            Don't have an account?
                            <a asp-controller="Auth" asp-action="Signup" class="link-primary">
                                Create one here
                            </a>
                        </p>
                        
                        <!-- Test Credentials Button -->
                        <div class="test-credentials-trigger">
                            <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#testCredentialsModal">
                                <i class="fas fa-key me-1"></i>Test Credentials
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Test Credentials Modal -->
<div class="modal fade" id="testCredentialsModal" tabindex="-1" aria-labelledby="testCredentialsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="testCredentialsModalLabel">
                    <i class="fas fa-key me-2"></i>Test Credentials
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center mb-4">Use these credentials to test different user roles:</p>
                
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="credential-card-modal">
                            <div class="credential-icon-modal">
                                <i class="fas fa-user"></i>
                            </div>
                            <h6 class="credential-title-modal">Customer</h6>
                            <div class="credential-details-modal">
                                <small class="credential-email-modal">customer@example.com</small>
                                <small class="credential-password-modal">Password1</small>
                            </div>
                            <button class="btn btn-primary btn-sm" onclick="fillCredentialsFromModal('customer@example.com', 'Password1')">
                                <i class="fas fa-copy me-1"></i>Use
                            </button>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="credential-card-modal">
                            <div class="credential-icon-modal">
                                <i class="fas fa-id-badge"></i>
                            </div>
                            <h6 class="credential-title-modal">Employee</h6>
                            <div class="credential-details-modal">
                                <small class="credential-email-modal">employee@example.com</small>
                                <small class="credential-password-modal">Passw0rd</small>
                            </div>
                            <button class="btn btn-primary btn-sm" onclick="fillCredentialsFromModal('employee@example.com', 'Passw0rd')">
                                <i class="fas fa-copy me-1"></i>Use
                            </button>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="credential-card-modal">
                            <div class="credential-icon-modal">
                                <i class="fas fa-crown"></i>
                            </div>
                            <h6 class="credential-title-modal">Admin</h6>
                            <div class="credential-details-modal">
                                <small class="credential-email-modal">administrator@example.com</small>
                                <small class="credential-password-modal">Pa$$w0rd</small>
                            </div>
                            <button class="btn btn-primary btn-sm" onclick="fillCredentialsFromModal('administrator@example.com', 'Pa$$w0rd')">
                                <i class="fas fa-copy me-1"></i>Use
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Login Hero Section */
        .login-hero-section {
            background: var(--background);
            padding: 4rem 0 2rem;
            text-align: center;
            position: relative;
        }

        .login-hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80%;
            height: 1px;
            background: linear-gradient(90deg, 
                transparent 0%, 
                rgba(255, 255, 255, 0.2) 20%, 
                rgba(255, 255, 255, 0.4) 50%, 
                rgba(255, 255, 255, 0.2) 80%, 
                transparent 100%);
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 800;
            color: var(--foreground);
            margin-bottom: 1rem;
            letter-spacing: -0.025em;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            color: var(--muted-foreground);
            margin: 0;
        }

        /* Main Login Card */
        .login-card {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-xl);
            margin-bottom: 2rem;
            transition: var(--transition);
        }

        .login-card:hover {
            box-shadow: var(--shadow-xl);
            border-color: var(--muted-foreground);
        }

        .login-card .card-body {
            padding: 3rem;
        }

        /* Login Header */
        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .login-icon {
            width: 80px;
            height: 80px;
            background: var(--muted);
            border: 2px solid var(--border);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2rem;
            color: var(--primary);
            transition: var(--transition);
        }

        .login-card:hover .login-icon {
            transform: scale(1.1);
            border-color: var(--primary);
            background: var(--secondary);
        }

        .login-title {
            font-size: 2rem;
            font-weight: 800;
            color: var(--foreground);
            margin-bottom: 0.5rem;
        }

        .login-subtitle {
            color: var(--muted-foreground);
            margin: 0;
        }

        /* Login Form */
        .login-form {
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            color: var(--foreground);
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

        .form-label i {
            color: var(--primary);
        }

        .form-control {
            padding: 0.875rem 1.25rem;
            font-size: 1rem;
            border-radius: var(--border-radius-sm);
            border: 1px solid var(--border);
            background: var(--input);
            color: var(--foreground);
            transition: var(--transition-fast);
        }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25);
            background: var(--input);
            color: var(--foreground);
        }

        .form-control::placeholder {
            color: var(--muted-foreground);
        }

        /* Login Footer */
        .login-footer {
            text-align: center;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
        }

        .signup-link {
            color: var(--muted-foreground);
            margin-bottom: 1rem;
        }

        .link-primary {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition-fast);
        }

        .link-primary:hover {
            color: var(--foreground);
            text-decoration: underline;
        }

        /* Test Credentials Trigger */
        .test-credentials-trigger {
            margin-top: 1rem;
        }

        .test-credentials-trigger .btn {
            border-radius: var(--border-radius-sm);
            transition: var(--transition);
        }

        .test-credentials-trigger .btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        /* Modal Styles */
        .modal-content {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: var(--border-radius);
        }

        .modal-header {
            border-bottom: 1px solid var(--border);
            background: var(--secondary);
        }

        .modal-title {
            color: var(--foreground);
            font-weight: 600;
        }

        .modal-title i {
            color: var(--primary);
        }

        .modal-body {
            background: var(--card);
            color: var(--foreground);
        }

        .modal-footer {
            border-top: 1px solid var(--border);
            background: var(--secondary);
        }

        .btn-close {
            filter: invert(1);
        }

        /* Modal Credential Cards */
        .credential-card-modal {
            background: var(--muted);
            border: 1px solid var(--border);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            text-align: center;
            transition: var(--transition);
            height: 100%;
        }

        .credential-card-modal:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary);
        }

        .credential-icon-modal {
            width: 40px;
            height: 40px;
            background: var(--secondary);
            border: 1px solid var(--border);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1rem;
            color: var(--primary);
            transition: var(--transition);
        }

        .credential-card-modal:hover .credential-icon-modal {
            transform: scale(1.1);
            background: var(--primary);
            color: var(--primary-foreground);
        }

        .credential-title-modal {
            color: var(--foreground);
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

        .credential-details-modal {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .credential-email-modal,
        .credential-password-modal {
            color: var(--muted-foreground);
            font-size: 0.8rem;
            font-family: 'Consolas', 'Monaco', monospace;
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: var(--border-radius-sm);
            padding: 0.25rem 0.5rem;
            display: block;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .login-card .card-body {
                padding: 2rem;
            }

            .modal-dialog {
                margin: 1rem;
            }

            .credential-card-modal {
                padding: 1rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-title {
                font-size: 2rem;
            }

            .login-card .card-body {
                padding: 1.5rem;
            }

            .modal-dialog {
                margin: 0.5rem;
            }

            .credential-card-modal {
                padding: 0.75rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function fillCredentialsFromModal(email, password) {
            // Fill the credentials
            document.getElementById('email').value = email;
            document.getElementById('password').value = password;
            
            // Add visual feedback
            const button = event.target;
            const originalText = button.innerHTML;
            const originalClass = button.className;
            
            button.innerHTML = '<i class="fas fa-check me-1"></i>Filled!';
            button.className = 'btn btn-success btn-sm';
            
            setTimeout(() => {
                button.innerHTML = originalText;
                button.className = originalClass;
            }, 1000);
            
            // Close modal after a brief delay
            setTimeout(() => {
                const modal = bootstrap.Modal.getInstance(document.getElementById('testCredentialsModal'));
                if (modal) {
                    modal.hide();
                }
            }, 1200);
        }

        // Auto-focus email field
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('email').focus();
        });

        // Add smooth entrance animation
        document.addEventListener('DOMContentLoaded', function() {
            const loginCard = document.querySelector('.login-card');
            if (loginCard) {
                loginCard.style.opacity = '0';
                loginCard.style.transform = 'translateY(20px)';
                loginCard.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                
                setTimeout(() => {
                    loginCard.style.opacity = '1';
                    loginCard.style.transform = 'translateY(0)';
                }, 200);
            }
        });
    </script>
} 