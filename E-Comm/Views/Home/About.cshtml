@{
    ViewData["Title"] = "About Us - 3B1G";
}

<!-- Hero Section with Video Background -->
<div class="position-relative vh-100 overflow-hidden">
    <!-- YouTube Video Background -->
    <div class="position-absolute top-0 start-0 w-100 h-100">
        <iframe 
            src="https://www.youtube.com/embed/bILn9v5MlkY?autoplay=1&mute=1&controls=0&showinfo=0&rel=0&loop=1&playlist=bILn9v5MlkY"
            frameborder="0" 
            allow="autoplay; encrypted-media" 
            allowfullscreen
            class="w-100 h-100"
            style="object-fit: cover; pointer-events: none;">
        </iframe>
    </div>
    
    <!-- Video Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-black bg-opacity-60"></div>
    
    <!-- Bottom Fade Effect -->
    <div class="position-absolute bottom-0 start-0 w-100" style="height: 200px; background: linear-gradient(transparent, #000000);"></div>
    
    <!-- Hero Content -->
    <div class="position-relative d-flex align-items-center justify-content-center h-100 text-white text-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="display-2 fw-bold mb-4" style="font-family: 'Nabla', cursive;">About 3B1G</h1>
                    <p class="fs-4 mb-4">Your trusted partner in entertainment since day one</p>
                    <div class="d-flex gap-3 justify-content-center mt-5">
                        <a href="#story" class="btn btn-outline-light btn-lg">Our Story</a>
                        <a href="#team" class="btn btn-light btn-lg">Our Team</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Company Story Section -->
<section id="story" class="py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="text-center mb-5">
                    <h2 class="display-4 fw-bold mb-4">Our Story</h2>
                    <div class="mx-auto" style="width: 60px; height: 3px; background: linear-gradient(90deg, transparent, white, transparent);"></div>
                </div>
                
                <div class="text-center mb-5">
                    <p class="fs-4 mb-4 text-white-50">
                        <span style="font-family: 'Nabla', cursive;">3B1G</span> was founded with a simple mission: to provide the best selection of books, movies, 
                        and games to entertainment enthusiasts around the world.
                    </p>
                    <p class="fs-5 text-white-50 lh-lg">
                        What started as a small passion project has grown into a comprehensive entertainment platform, 
                        serving thousands of customers who trust us for their entertainment needs. We believe that great 
                        stories, whether in books, films, or games, have the power to inspire, educate, and bring people together.
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Section Separator -->
    <div class="container-fluid">
        <div style="height: 1px; background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);"></div>
    </div>
</section>

